<html>
  <head>
    <title>Votify</title>
    <style type="text/css">
      h1, h2, h3, h4, p {
        margin: 0;
        padding: 0;
      }

      .cf:before,
      .cf:after {
          content: " "; /* 1 */
          display: table; /* 2 */
      }

      .cf:after {
          clear: both;
      }

      body {
        font-family: sans-serif;
        color: #222;
        font-size: 14px;
      }
      .wrapper {
        margin: 0 auto;
        width: 320px;
      }

      .main_button {
        display: block;
        color: white;
        background-color: #F02311;
        border-radius: 4px;
        padding: 20px;
        text-decoration: none;
        text-align: center;
        font-weight: bold;
        margin-top: 20px;
      }

      .header {
        clear: both;
        border-bottom: 1px solid #555;
      }

      h1 {
        float: left;
        width: 100px;
        font-size: 32px;
        line-height: 40px;
      }

      .current_user {
        float: right;
        width: 220px;
        text-align: right;
        line-height: 20px;
        font-size: 12px;
      }

      .block {
        margin-top: 20px;
        padding-bottom: 20px;
      }

      .now_playing {
        border-bottom: 1px solid #555;
      }

      .now_playing p {
        color: #CCC;
      }

      .now_playing h2 {
        margin-top: 10px;
      }

      .votes h3 {
        margin-bottom: 10px;
      }
    </style>
    <%= yield_content :head %>
  </head>
  <body>
    <div class="wrapper">
      <div class="header cf block">
        <h1>Votify</h1>

        <% if authenticated? %>
          <p class="current_user"><%= session[:email] %><br><a href="/logout">Log Out</a></p>
        <% end %>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
